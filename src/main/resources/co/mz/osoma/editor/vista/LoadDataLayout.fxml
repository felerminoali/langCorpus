<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" minHeight="35.0" prefHeight="200.0" prefWidth="496.0" spacing="25.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.mz.osoma.editor.controlador.LoadDataFileController">
    <!-- TODO Add Nodes -->
    <children>
        <Label text="Choose text files..." />
        <HBox alignment="CENTER" spacing="10.0">
            <children>
            <Label text="Origin" />
                <TextField fx:id="pathOriginField" prefHeight="30.0" prefWidth="250.0" />
                <Button mnemonicParsing="false" onAction="#handleBrowse" text="Browse" />
            </children>
            <padding>
                <Insets />
            </padding>
        </HBox>
      <HBox alignment="CENTER" layoutX="10.0" layoutY="91.0" spacing="10.0">
         <children>
            <Label text="Target" />
            <TextField fx:id="pathTargetField" prefHeight="30.0" prefWidth="250.0" />
            <Button mnemonicParsing="false" onAction="#handleBrowseTarget" text="Browse" />
         </children>
         <padding>
            <Insets />
         </padding>
      </HBox>
        <HBox alignment="CENTER" spacing="30.0">
            <children>
                <Button mnemonicParsing="false" onAction="#handleLoad" text="Load" />
            </children>
        </HBox>
    </children>
</VBox>
